<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".activities.screens.Dashboard"
    android:background="@color/surfaceBackground"
    >

    <RelativeLayout
        android:id="@+id/id_currentStatusLayout"
        android:layout_weight="0.35"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_background_blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Status "
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/id_currentStatus_progress_bar"
            android:layout_marginEnd="20dp"
            />
        <ProgressBar
            android:id="@+id/id_currentStatus_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/id_currentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F5EBC0"
            android:layout_toEndOf="@+id/id_currentStatus_progress_bar"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />
        <Button
            android:id="@+id/id_goTo_CoronaInfoActivity"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/icons_info24"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <TableRow
        android:layout_weight="0.65"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TableRow
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/surfaceBackground"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/surfaceBackground"
                >
                <RelativeLayout
                    android:id="@+id/id_riskIndexLayout"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_buttons2"
                    >
                    <TextView
                        android:id="@+id/id_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Risk Index"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_above="@+id/id_riskIndexStat"
                        android:layout_marginBottom="5dp"
                        />
                    <ProgressBar
                        android:id="@+id/riskIndex_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/id_riskIndexStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="12sp"
                        android:textColor="#43A047"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_warningLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_buttons2">

                    <TextView
                        android:id="@+id/id_text_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/id_locationStat"
                        android:layout_marginBottom="10dp"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textAlignment="center" />
                    <ProgressBar
                        android:id="@+id/locationStat_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/id_locationStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="#43A047"
                        android:textSize="12sp" />
                    <ProgressBar
                        android:id="@+id/zoneColor_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="invisible"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/id_locationStat"
                        />
                    <TextView
                        android:id="@+id/id_zoneColor"
                        android:layout_below="@+id/id_locationStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#B00020"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/surfaceBackground"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/surfaceBackground"
                >

                <RelativeLayout
                    android:id="@+id/id_averageContactsLayout"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_buttons2"
                    >
                    <TextView
                        android:id="@+id/id_text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Contacts"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_above="@+id/id_avgContacts"
                        android:layout_marginBottom="5dp"
                        />
                    <ProgressBar
                        android:id="@+id/averageContacts_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/id_avgContacts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#43A047"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_contactsTodayLayout"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_buttons2"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/id_text1"
                        android:layout_above="@+id/id_numStat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contacts today"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/id_numStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#43A047"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

            </LinearLayout>

        </TableRow>
    </TableRow>

</TableLayout>