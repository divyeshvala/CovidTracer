<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
 >

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_white"
        >
        <TextView
            android:id="@+id/id_notif_title1"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:text="Risk Factor"
            android:textSize="15sp"
            android:textColor="@color/colorStatsText"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/id_notif_riskFactor"
            android:layout_below="@id/id_notif_title1"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:text="20%"
            android:textSize="15sp"
            android:textColor="@color/colorStatsSubText"
            android:textAlignment="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_white"
        >
        <TextView
            android:id="@+id/id_notif_title2"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:text="Contacts Today"
            android:textSize="15sp"
            android:textColor="@color/colorStatsText"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/id_notif_contactsToday"
            android:layout_below="@id/id_notif_title2"
            android:layout_height="25dp"
            android:layout_width="match_parent"
            android:text="20"
            android:textSize="15sp"
            android:textColor="@color/colorStatsSubText"
            android:textAlignment="center"
            />
    </RelativeLayout>

</LinearLayout>